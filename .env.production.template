# Production Environment Configuration for Kopiso E-commerce Platform
# Copy this file to .env.production and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Application URLs
NEXT_PUBLIC_BASE_URL=https://kopiso.com
NEXT_PUBLIC_API_URL=https://api.kopiso.com
NEXT_PUBLIC_APP_NAME=Kopiso

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# For production, replace with actual database connection
DATABASE_URL=mongodb://username:password@host:port/kopiso_production
# Or for PostgreSQL:
# DATABASE_URL=postgresql://username:password@host:port/kopiso_production

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration (Generate strong secrets)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Security
SESSION_SECRET=your-super-secure-session-secret-key-min-32-chars
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Password Security
BCRYPT_ROUNDS=12

# CORS Settings
CORS_ORIGIN=https://kopiso.com
CORS_CREDENTIALS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Example: SendGrid, SES, etc.)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@kopiso.com
EMAIL_FROM_NAME=Kopiso

# File Storage (Example: AWS S3, Cloudinary, etc.)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=kopiso-production-assets

# Payment Gateways
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-live-client-id
PAYPAL_CLIENT_SECRET=your-paypal-live-client-secret
PAYPAL_MODE=live

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=Kopiso-Production

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis Configuration
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# CDN Configuration
CDN_URL=https://cdn.kopiso.com
STATIC_ASSETS_URL=https://static.kopiso.com

# Cache Settings
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=3000
SERVER_TIMEOUT=30000
BODY_LIMIT=10mb
UPLOAD_LIMIT=50mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Compression
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_WISHLIST=true
FEATURE_REVIEWS=true
FEATURE_RECOMMENDATIONS=true
FEATURE_LIVE_CHAT=true
FEATURE_ADMIN_ANALYTICS=true

# Third-party Integrations
ENABLE_GOOGLE_LOGIN=true
ENABLE_FACEBOOK_LOGIN=true
ENABLE_APPLE_LOGIN=false

# =============================================================================
# SEO & MARKETING
# =============================================================================

# SEO Configuration
SEO_DEFAULT_TITLE=Kopiso - Your One-Stop E-commerce Destination
SEO_DEFAULT_DESCRIPTION=Discover amazing products at unbeatable prices on Kopiso
SEO_DEFAULT_KEYWORDS=ecommerce,shopping,online store,products,deals

# Social Media
TWITTER_HANDLE=@kopiso
FACEBOOK_PAGE=kopiso
INSTAGRAM_HANDLE=kopiso

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Logging Levels (error, warn, info, debug)
LOG_LEVEL=warn
LOG_FORMAT=json

# Debug Settings (set to false in production)
DEBUG_MODE=false
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=kopiso-backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# Security Headers
HSTS_MAX_AGE=31536000
FRAME_OPTIONS=DENY
CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# API LIMITS & QUOTAS
# =============================================================================

# API Rate Limits
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000

# Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Search Limits
MAX_SEARCH_RESULTS=100
SEARCH_CACHE_TTL=300

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@kopiso.com

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_QUEUE_CONCURRENCY=5

# SMS Notifications (Example: Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================

# Currency & Localization
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR

# Tax Configuration
TAX_CALCULATION_ENABLED=true
DEFAULT_TAX_RATE=0.08

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=50.00
DEFAULT_SHIPPING_RATE=9.99

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Admin Panel Configuration
ADMIN_SESSION_TIMEOUT=3600000
ADMIN_PASSWORD_POLICY=strict
ADMIN_2FA_REQUIRED=true

# Admin Notifications
ADMIN_EMAIL_ALERTS=true
ADMIN_SLACK_WEBHOOK=your-slack-webhook-url

# =============================================================================
# WARNING: SECURITY CONSIDERATIONS
# =============================================================================

# IMPORTANT: 
# 1. Never commit this file with real values to version control
# 2. Use a secure secret management service in production
# 3. Rotate secrets regularly
# 4. Use environment-specific values
# 5. Enable audit logging for all environment variable access

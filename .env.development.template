# Development Environment Configuration for Kopiso E-commerce Platform
# Copy this file to .env.local for local development

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Application URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=Kopiso (Dev)

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Local development database
DATABASE_URL=mongodb://localhost:27017/kopiso_development
# Or for local PostgreSQL:
# DATABASE_URL=postgresql://localhost:5432/kopiso_development

# Database Pool Settings
DATABASE_POOL_MIN=1
DATABASE_POOL_MAX=5
DATABASE_TIMEOUT=10000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration (Use weak secrets for development only)
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Security (Relaxed for development)
SESSION_SECRET=dev-session-secret-not-for-production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Password Security (Lower rounds for faster development)
BCRYPT_ROUNDS=4

# CORS Settings (Permissive for development)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# EXTERNAL SERVICES (DEVELOPMENT/SANDBOX)
# =============================================================================

# Email Service (Use test credentials or mock service)
EMAIL_PROVIDER=mock
EMAIL_API_KEY=test-key
EMAIL_FROM=dev@kopiso.local
EMAIL_FROM_NAME=Kopiso Dev

# File Storage (Local storage for development)
STORAGE_PROVIDER=local
UPLOAD_PATH=uploads
STATIC_PATH=public/uploads

# Payment Gateways (Test/Sandbox credentials)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_test-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
PAYPAL_CLIENT_SECRET=your-paypal-sandbox-client-secret
PAYPAL_MODE=sandbox

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Monitoring (Optional for development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=dev

# Analytics (Disabled for development)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Performance Monitoring (Disabled for development)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================

# Redis Configuration (Optional for local development)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=1

# CDN Configuration (Use local URLs)
CDN_URL=http://localhost:3000
STATIC_ASSETS_URL=http://localhost:3000

# Cache Settings (Short TTL for development)
CACHE_TTL=60
STATIC_CACHE_TTL=300

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server Settings
PORT=3000
SERVER_TIMEOUT=10000
BODY_LIMIT=10mb
UPLOAD_LIMIT=50mb

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Compression (Disabled for easier debugging)
COMPRESSION_LEVEL=0
COMPRESSION_THRESHOLD=1024

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles (All enabled for testing)
FEATURE_WISHLIST=true
FEATURE_REVIEWS=true
FEATURE_RECOMMENDATIONS=true
FEATURE_LIVE_CHAT=false
FEATURE_ADMIN_ANALYTICS=true

# Third-party Integrations (Disabled for development)
ENABLE_GOOGLE_LOGIN=false
ENABLE_FACEBOOK_LOGIN=false
ENABLE_APPLE_LOGIN=false

# =============================================================================
# SEO & MARKETING
# =============================================================================

# SEO Configuration (Development values)
SEO_DEFAULT_TITLE=Kopiso (Development) - E-commerce Platform
SEO_DEFAULT_DESCRIPTION=Development version of Kopiso e-commerce platform
SEO_DEFAULT_KEYWORDS=ecommerce,development,testing

# Social Media (Development handles)
TWITTER_HANDLE=@kopiso_dev
FACEBOOK_PAGE=kopiso-dev
INSTAGRAM_HANDLE=kopiso_dev

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Logging Levels (Verbose for development)
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Debug Settings (Enabled for development)
DEBUG_MODE=true
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Hot Reload Settings
FAST_REFRESH=true
WATCH_FILES=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Configuration (Disabled for development)
BACKUP_ENABLED=false
BACKUP_FREQUENCY=never
BACKUP_RETENTION_DAYS=1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Development environment under construction

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy (Relaxed for development)
CSP_ENABLED=false
CSP_REPORT_URI=/api/csp-report

# Security Headers (Relaxed for development)
HSTS_MAX_AGE=0
FRAME_OPTIONS=SAMEORIGIN
CONTENT_TYPE_OPTIONS=nosniff

# =============================================================================
# API LIMITS & QUOTAS
# =============================================================================

# API Rate Limits (Relaxed for development)
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=10000

# Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Search Limits
MAX_SEARCH_RESULTS=100
SEARCH_CACHE_TTL=30

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Push Notifications (Test keys)
VAPID_PUBLIC_KEY=test-vapid-public-key
VAPID_PRIVATE_KEY=test-vapid-private-key
VAPID_SUBJECT=mailto:dev@kopiso.local

# Email Notifications (Mock for development)
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_QUEUE_CONCURRENCY=1

# SMS Notifications (Disabled for development)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# BUSINESS SETTINGS
# =============================================================================

# Currency & Localization
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES

# Tax Configuration (Simplified for development)
TAX_CALCULATION_ENABLED=false
DEFAULT_TAX_RATE=0.00

# Shipping Configuration (Free for development)
FREE_SHIPPING_THRESHOLD=0.00
DEFAULT_SHIPPING_RATE=0.00

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Admin Panel Configuration (Relaxed for development)
ADMIN_SESSION_TIMEOUT=86400000
ADMIN_PASSWORD_POLICY=relaxed
ADMIN_2FA_REQUIRED=false

# Admin Notifications (Console logging)
ADMIN_EMAIL_ALERTS=false
ADMIN_SLACK_WEBHOOK=

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=mongodb://localhost:27017/kopiso_test

# Test Users (Pre-seeded for development)
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=admin123
TEST_USER_EMAIL=user@test.com
TEST_USER_PASSWORD=user123

# Mock Services
MOCK_PAYMENT_SERVICE=true
MOCK_EMAIL_SERVICE=true
MOCK_SMS_SERVICE=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Code Analysis
ENABLE_BUNDLE_ANALYZER=false
ENABLE_SOURCEMAPS=true

# Development Server
DEV_SERVER_HOST=localhost
DEV_SERVER_HTTPS=false

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# =============================================================================
# LOCAL DEVELOPMENT NOTES
# =============================================================================

# To use this configuration:
# 1. Copy this file to .env.local
# 2. Update any values specific to your local setup
# 3. Start the development servers:
#    - Frontend: npm run dev
#    - Backend: npm run server
# 4. Access the application at http://localhost:3000
# 5. Access the API at http://localhost:3001

# Mock Data:
# - Sample products, users, and orders are automatically seeded
# - Payment flows use test/mock implementations
# - Email notifications are logged to console
# - File uploads are stored locally in the uploads directory
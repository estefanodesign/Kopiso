# Production Environment Configuration for Vercel
# Copy these variables to your Vercel project settings: Environment Variables section

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Kopiso E-Commerce
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://kopiso-ecommerce.vercel.app

# API Configuration
NEXT_PUBLIC_API_URL=https://kopiso-ecommerce.vercel.app/api
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-kopiso-2024-vercel
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Authentication
ADMIN_EMAIL=admin@kopiso.com
ADMIN_PASSWORD=admin123
DEMO_USER_EMAIL=user@kopiso.com
DEMO_USER_PASSWORD=user123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Monitoring
LOG_LEVEL=info
ENABLE_ERROR_MONITORING=true

# Performance
ENABLE_COMPRESSION=true
CACHE_TTL=3600

# Production flags
NEXT_PUBLIC_IS_PRODUCTION=true
ENABLE_DEBUG_MODE=false

# Vercel specific variables (automatically set by Vercel)
# VERCEL_ENV=production
# VERCEL_URL=automatically set by Vercel
# VERCEL_REGION=automatically set by Vercel
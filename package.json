{
  "name": "kopiso-ecommerce",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:optimize": "node scripts/build-optimize.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "server": "nodemon server/index.ts",
    "server:prod": "node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:scan": "node scripts/security-audit.js",
    "security:full": "npm run security:audit && npm run security:scan",
    "performance:lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "export": "next export",
    "sitemap": "node scripts/generate-sitemap.js",
    "seo:validate": "node scripts/seo-validate.js",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "deploy:prepare": "npm run build:optimize && npm run test:coverage",
    "vercel:prepare": "node scripts/vercel-deploy-prep.js",
    "vercel:deploy": "npm run vercel:prepare && vercel --prod"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.16.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "antd": "^5.20.2",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "critters": "^0.0.23",
    "date-fns": "^4.1.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-slow-down": "^2.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.427.0",
    "multer": "^1.4.5-lts.1",
    "next": "^14.2.32",
    "postcss": "^8.4.41",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-hot-toast": "^2.4.1",
    "swiper": "^11.1.9",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
